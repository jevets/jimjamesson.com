<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ author.name }}, {{ author.title }}</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Lato:400,900&amp;display=swap" rel="stylesheet">
</head>
<body>
  <header class="site-header text-blue-100 py-8 text-center">
    {% Container %}
      <h1 class="font-black text-4xl leading-tight tracking-tight">{{ author.name }}</h1>
      <div class="text-lg font-normal text-blue-200 uppercase leading-none tracking-wide">{{ author.title }}</div>
      <div class="mt-3">
        <a class="underline hover:no-underline" href="tel:{{ author.phone }}">{{ author.phone }}</a>
        <br>
        <a class="underline hover:no-underline" href="mailto:{{ author.email }}">{{ author.email }}</a>
      </div>
    {% endContainer %}
  </header>

  <main class="site-main">
    {{ content | safe }}
  </main>

  <footer class="site-footer py-8 text-xs bg-blue-100 text-blue-900 text-center">
    {% Container %}
      Site contents &copy; {{ site.copyrightDate }} {{ author.name }}
    {% endContainer %}
  </footer>
</body>
</html>
