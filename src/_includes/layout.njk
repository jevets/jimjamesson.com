<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ author.name }}, {{ author.title }}</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Lato:400,900&amp;display=swap" rel="stylesheet">
</head>
<body>
  <header class="site-header text-blue-100 py-8">
    {% Container %}
      {# <h1 class="text-2xl font-black">
        {{ author.name }},
        <span class="text-blue-200">{{ author.title }}</span>
      </h1> #}
      {# <h1>
        <span class="font-black text-3xl">{{ author.name }}</span>
        <span class="text-3xl text-blue-200">{{ author.title }}</span>
      </h1> #}
      <h1 class="font-black text-3xl">{{ author.name }}</h1>
      <div class="text-lg font-bold tracking-wider text-blue-200">{{ author.title }}</div>
      {# <div>
        <a class="mx-2 underline hover:no-underline" href="tel:{{ author.phone }}">{{ author.phone }}</a>
        <br>
        <a class="mx-2 underline hover:no-underline" href="mailto:{{ author.email }}">{{ author.email }}</a>
      </div> #}
    {% endContainer %}
  </header>

  <main class="site-main">
    {{ content | safe }}
  </main>

  <footer class="site-footer py-8 text-xs bg-blue-100 text-blue-900 text-center">
    {% Container %}
      Site contents &copy; {{ site.copyrightDate }} {{ author.name }}
    {% endContainer %}
  </footer>
</body>
</html>
